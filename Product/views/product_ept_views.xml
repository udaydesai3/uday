<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="product_ept_tree" model="ir.ui.view">
		<field name="name">Product tree view</field>
		<field name="model">product.ept</field>
		<field name="priority">2</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="price" />
				<field name="on_hand_quantity" />
				<field name="total_price" />
				<field name="is_salable" />
				<field name="state" />
				<field name="date" />
				<field name="description" />
			</tree>
		</field>
	</record>

	<record id="product_ept_form" model="ir.ui.view">
		<field name="name">Product form view</field>
		<field name="model">product.ept</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="image" widget="image"/>
							<field name="name"/>
							<field name="price"/>
							<field name="on_hand_quantity"/>							
							<field name="is_salable"/>
						</group>
						<group>
							<field name="state"/>
							<field name="date"/>
							<field name="total_price"/>							
						</group>						
					</group>
					<group>
						<field name="description" />
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="product_ept_action" model="ir.actions.act_window">
		<field name="name">Products</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">product.ept</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
	<menuitem id="product_ept_product_menu_root" name="Product" />
	<menuitem id="product_ept_product_data" name="Products"
		 parent="product_ept_product_menu_root"
		sequence="1" />
	<menuitem id="product_ept_product_details" name="Products Details"
		action="product_ept_action" parent="product_ept_product_data"
		sequence="1" />
		
	<menuitem id="product_category_product_data" name="Products Category"
		action="product_category_action" parent="product_ept_product_data"
		 />	
</odoo>